{
  "compilerOptions": {
    // Type Checking
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "src",

    // Emit
    "sourceMap": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "removeComments": true,

    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Language and Environment
    "target": "es2016",

    // Added for Vite compatibility
    "isolatedModules": true,
    "resolveJsonModule": true
  }
}
